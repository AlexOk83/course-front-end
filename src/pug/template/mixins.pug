include example-code

mixin header()
	header.header
		.container
			a.header__lang(href='') rus
			.header__logo
		.header__slider
			each item in slider
				+slider_item(item)
		a.header__arrow-down(href='#photos')

mixin footer()
	footer.footer
		.container
			.footer__cont
				.footer__logo
				nav.footer__menu
					each item in footer_menu
						li.footer__menu-item
							a(href='##')= item
				p.footer__info Наш сайт использует куки, нажимая зарегистрироваться
					| вы соглашаетесь с <a href='#'>политикой использования cookie</a>
				p.footer__info Все фотографии моделей, использованные на сайте несут
					|  исключительно иллюстративный зарактер.
					| <br> Любые совпадения с реальными людьми и являются случайностью.

mixin slider_item(item)
	.header__slider-item(data-bg= 'images/lending/' + item.bg)
		.container
			.header__slider-left
				h1.header__slider-title= item.title
				h2.header__slider-desc
					each text in item.desc
						p= text
				.header__slider-button= item.btn_text
			.header__slider-image: img(src='images/lending/' + item.image)


mixin photo(item)
	.photos__wrapper.parallax(class= item.classes)
		.photos__item
			img.photos__image(src= 'images/lending/' + item.image, alt='')
			p.photos__text= item.text

mixin programm(item)
	.programm
		.programm__image.parallax(class= item.classes): img(src= 'images/lending/' + item.image, alt= item.title)
		.programm__text
			h2.programm__title= item.title
			p.programm__desc= item.desc
mixin form()
	form.form
		+input('text', 'Как вас зовут?', 'name')
		+input('email', 'Ваш e-mail:', 'email')
		+input('password', 'Придумайте пароль:', 'pass')
		+checkbox('age-true', 'Подтверждаю, что мне есть 18 лет')
		+checkbox_igree()
		+button('Стать моделью!')
mixin input(type, text, name1)
	.form__input
		input(type= type, placeholder= text, name= name1, autocomplete='off', required)
		if (type == 'password')
			.eye
mixin checkbox(id, text)
	.form__checkbox
		input(type='checkbox', id= id, name= id, required)
		label(for= id)= text

mixin checkbox_igree()
	.form__checkbox
		input(type='checkbox', id='igree', name='igree', required)
		label.small(for='igree') Согласен с	<a href='#'>политикой конфиденциальности</a> и <a href='#'>политикой обработки персональных данных</a>

mixin button(text)
	button.form__button(type='submit')= text

