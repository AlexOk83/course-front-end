doctype
include variable
include mixins
include layout_mixins

html(lang="ru")
	head
		title Boulder Prolotherapy

		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0")

		link(href='https://fonts.googleapis.com/css?family=Catamaran:300,400,500,700', rel='stylesheet')
		link(rel="styleSheet", media="all", type="text/css", href="css/style.min.css")

	body
		block var
		if (page == 'index')
			.main
				+header(page)
				+device_menu(page)
				main
					block content
				+footer()
		else
			+header(page)
			main
				block content
			+footer()
		script(src='js/jquery.min.js')
		script(src='js/main.js')
